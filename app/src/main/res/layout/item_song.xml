<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover"
        android:layout_alignTop="@+id/cover"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/song_flag"
        android:text="歌名："
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/song_flag"
        android:layout_alignTop="@+id/song_flag"
        android:layout_marginLeft="10dp"
        android:textColor="#F4B977"
        android:id="@+id/name"
        android:text="静止"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover"
        android:layout_alignTop="@+id/cover"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/singer_flag"
        android:text="歌手："

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/singer_flag"
        android:layout_alignTop="@+id/singer_flag"
        android:layout_marginLeft="10dp"
        android:textColor="#F4B977"
        android:id="@+id/singer"
        android:text="花儿乐队"
        />
</RelativeLayout>